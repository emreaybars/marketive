# Widget API Server - Production Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy server files
COPY server/package.json ./server/
COPY server/widget-api.js ./server/

# Copy public files for static serving
COPY public/ ./public/

# Install dependencies
WORKDIR /app/server
RUN npm ci --only=production

# Expose port
EXPOSE 3001

# Start server
CMD ["node", "widget-api.js"]
